<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_budget">

    <fragment
        android:id="@+id/navigation_budget"
        android:name="com.fudgetbudget.ui.BudgetFragment"
        android:label="Budget"
        tools:layout="@layout/fragment_budget" />

    <fragment
        android:id="@+id/navigation_transactions"
        android:name="com.fudgetbudget.ui.StoredTransactionsFragment"
        android:label="Transactions"
        tools:layout="@layout/fragment_stored_transactions" />

    <fragment
        android:id="@+id/navigation_records"
        android:name="com.fudgetbudget.ui.RecordsFragment"
        android:label="Records"
        tools:layout="@layout/fragment_records" />

    <fragment
        android:id="@+id/navigation_tools"
        android:name="com.fudgetbudget.ui.ToolsFragment"
        android:label="Tools"
        tools:layout="@layout/fragment_tools" />
</navigation>
